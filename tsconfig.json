{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@schweizerischebundesbahnen/journey-maps-client/*": [
        "projects/journey-maps-client/*",
        "projects/journey-maps-client"
      ],
      "@schweizerischebundesbahnen/journey-maps-client": [
        "dist/journey-maps-client/journey-maps-client",
        "dist/journey-maps-client"
      ],
      "arcgis-feature-layer": [
        "dist/arcgis-feature-layer/arcgis-feature-layer",
        "dist/arcgis-feature-layer"
      ]
    }
  }
}
